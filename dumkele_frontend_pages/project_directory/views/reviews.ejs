<!DOCTYPE html>
<html>
<head>
    <title>Reviews</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<style>
    .button {
        float: right;
        padding: 15px 15px;
        background-color: #69f9da;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        color: black;
        text-decoration: none;
    }
    .button:hover {
        text-decoration: none;
        background-color: #a795ff;
        color: white;
    }
    .a:visited {
        text-decoration: none;
        color: black;
    }
    .headerbox {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .headerblock1 {
        width: 80%;
        box-sizing: border-box;
    }
    .headerblock2 {
        width: 20%;
        box-sizing: border-box;
    }
    div.container {
        text-align: center;
        display: block;
    }
    div.info {
        margin: auto;
        width: 60%;
        background-color: white;
        padding: 50px;
        display: inline-block;
        float: none;
        box-shadow: 3px 3px 8px #888888;
        border-radius: .8rem;
    }
</style>
<body>

    <div class="wrapper">
        <%- include('partials/sidebar') %>
        <div class="main_content">
            <div class="header">
                <div class="headerbox" style="text-transform: uppercase;">
                    <h2 class="headerblock1">Customer Reviews</h2>
                    <div class="headerblock2">
                        <button class="button" onclick="location.href='http://localhost:3000/delete-reviews'">Delete Reviews</button>
                    </div>
                </div>
            </div>
            <div class="container">
    
                <div class="info">
                    <h1>Average Rating: <%= averageRating %> <i class="fas fa-star"></i></h1>
                </div>
    
                <% for (let i = 0; i < reviews.length; i++) { %>
                <div class="info">
                    <div>
                        <p><i class="fas fa-user"></i> <%= reviews[i].Name %></p>
                        <% for (let j = 0; j < reviews[i].rev_rating; j++) { %>
                            <i class="fas fa-star"></i>
                        <% } %>
                        <p><%= reviews[i].rev_date %></p>
                    </div>
                    <br>
                    <div>
                        <p><%= reviews[i].rev_description %></p>
                    </div>
                    <br>
                </div>
                <% } %>
                
            </div>
        </div>
    </div>


</body>
    
</html>
